class com.tempest.storycards.Draw
{
	///////////////////////////////////////////////////////////////////////////////////////////////////
	///////////////////////////////////////////////////////////////////////////////////////////////////

	public static function solidRectangle(movie, x1, y1, x2, y2, color, alpha):Void
	{
		movie.lineStyle(1, color, alpha);
		movie.beginFill(color, alpha);
		movie.moveTo(x1, y1);
		movie.lineTo(x1, y2);
		movie.lineTo(x2, y2);
		movie.lineTo(x2, y1);
		movie.lineTo(x1, y1);
		movie.endFill(color, alpha);
	}

	///////////////////////////////////////////////////////////////////////////////////////////////////
	///////////////////////////////////////////////////////////////////////////////////////////////////

	public static function rectangle(movie, x1, y1, x2, y2, color, thickness, alpha):Void
	{
		movie.lineStyle(thickness, color, alpha);
		movie.moveTo(x1, y1);
		movie.lineTo(x1, y2);
		movie.lineTo(x2, y2);
		movie.lineTo(x2, y1);
		movie.lineTo(x1, y1);
	}

	///////////////////////////////////////////////////////////////////////////////////////////////////
	///////////////////////////////////////////////////////////////////////////////////////////////////

	public static function line(movie, x1, y1, x2, y2, color, thickness, alpha):Void
	{
		movie.lineStyle(thickness, color, alpha)
		movie.moveTo(x1, y1);
		movie.lineTo(x2, y2);
	}

	///////////////////////////////////////////////////////////////////////////////////////////////////
	///////////////////////////////////////////////////////////////////////////////////////////////////

	public static function FormatText(field:TextField, font:String, size:Number, bold:Boolean):Void
	{
		var textFormat:TextFormat = new TextFormat();
		textFormat.bold = bold;
		textFormat.size = size;
		textFormat.font = font;
		field.setTextFormat(textFormat);
	}

	///////////////////////////////////////////////////////////////////////////////////////////////////
	///////////////////////////////////////////////////////////////////////////////////////////////////

	public static function FormatLink(field:TextField, font:String, size:Number, bold:Boolean):Void
	{
		var textFormat:TextFormat = new TextFormat();
		textFormat.bold = bold;
		textFormat.size = size;
		textFormat.font = font;
		textFormat.color = 0x0000FF;
		textFormat.underline = true;
		field.setTextFormat(textFormat);
	}

	///////////////////////////////////////////////////////////////////////////////////////////////////
	///////////////////////////////////////////////////////////////////////////////////////////////////
}
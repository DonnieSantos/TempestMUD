import com.tempest.storycards.Draw;

class com.tempest.storycards.RowHighlighter
{
	///////////////////////////////////////////////////////////////////////////////////////////////////
	///////////////////////////////////////////////////////////////////////////////////////////////////

	public var _RowHighlighter:MovieClip;

	///////////////////////////////////////////////////////////////////////////////////////////////////
	///////////////////////////////////////////////////////////////////////////////////////////////////

	public function RowHighlighter()
	{
		_RowHighlighter = _root.createEmptyMovieClip("RowHighlighter", _root.getNextHighestDepth());

		for (var i=1; i<=10; i++) Draw.line(_RowHighlighter, 1, i, 799, i, 0x00FF00, 1, 0+(i*10));
		for (var i=1; i<=10; i++) Draw.line(_RowHighlighter, 1, 10+i, 799, 10+i, 0x00FF00, 1, 100);
		for (var i=1; i<=10; i++) Draw.line(_RowHighlighter, 1, 20+i, 799, 20+i, 0x00FF00, 1, 100-(i*10));

		_RowHighlighter._alpha = 15;
		_RowHighlighter._y = 104;
	}

	///////////////////////////////////////////////////////////////////////////////////////////////////
	///////////////////////////////////////////////////////////////////////////////////////////////////
}